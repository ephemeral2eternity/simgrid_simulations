<?xml version='1.0'?>
<!DOCTYPE platform SYSTEM "http://simgrid.gforge.inria.fr/simgrid.dtd">
<platform version="3">
	<AS id="exp1" routing="Full">
		<host id="server_A" power="1E8"/>
		<host id="client_A" power="1E8"/>
		<host id="server_B" power="1E8"/>
		<host id="client_B" power="1E8"/>
		<host id="server_C" power="1E8"/>
		<host id="client_C" power="1E8"/>
		<host id="server_D" power="1E8"/>
		<host id="client_D" power="1E8"/>

		<link id="bb" bandwidth="1E9" latency="1E-5" />
		<route src="client_A" dst="server_A">
			<link_ctn id="bb"/>
		</route>
		<route src="client_B" dst="server_B">
			<link_ctn id="bb"/>
		</route>
		<route src="client_C" dst="server_C">
			<link_ctn id="bb"/>
		</route>
		<route src="client_D" dst="server_D">
			<link_ctn id="bb"/>
		</route>
	</AS>
</platform>
